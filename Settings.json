{
  "window": {
    "width": 600,
    "height": 450,
    "x": 100,
    "y": 100
  },
  "shortcut": {
    "start": "Ctrl+Alt+L"
  },
  "behavior": {
    "autoExitWaitAfterAction": true,
    "showBalloon": false,
    "showStartupBalloon": true,
    "balloonTimeout": 1000
  },
  "browser": {
    "type": "edge",
    "aiUrl": "https://chat.openai.com/"
  },
  "ui": {
    "fontSize": 12,
    "fontFamily": "BIZ UDGothic",
    "separatorLines": [6, 8, 14, 16]
  },
  "log": {
    "level": "Debug",
    "maxFileSize": 512000,
    "directory": "logs",
    "fileName": "app.log"
  },
  "uiTexts": {
    "appTitle": "登録ショートカット実行ツール",
    "waitModeStart": "実行待ちモード開始",
    "waitModeEnd": "バックグラウンド待機モードに戻ります",
    "actionExecuted": "アクション実行",
    "settingsReloaded": "設定を再読み込みしました",
    "error": {
      "settingsLoad": "設定ファイルの読み込みに失敗しました",
      "templateLoad": "テンプレートファイルの読み込みに失敗しました",
      "clipboardEmpty": "クリップボードにテキストがありません"
    }
  },
  "actions": {
    "Ctrl+Alt+F1": {
      "type": "prompt",
      "templateFile": "templates/summary.txt",
      "displayName": "要約",
      "description": "テキストを要約するプロンプトの生成"
    },
    "Ctrl+Alt+F2": {
      "type": "prompt",
      "templateFile": "templates/text_explanation.txt",
      "displayName": "文章説明",
      "description": "文章を説明するプロンプトの生成"
    },
    "Ctrl+Alt+F3": {
      "type": "prompt",
      "templateFile": "templates/to_english.txt",
      "displayName": "英訳",
      "description": "日本語を英語に翻訳するプロンプトの生成"
    },
    "Ctrl+Alt+F4": {
      "type": "prompt",
      "templateFile": "templates/to_japanese.txt",
      "displayName": "日本語訳",
      "description": "英語を日本語に翻訳するプロンプトの生成"
    },
    "Ctrl+Alt+F5": {
      "type": "prompt",
      "templateFile": "templates/minutes.txt",
      "displayName": "議事録作成",
      "description": "会議の議事録を作成するプロンプトの生成"
    },
    "Ctrl+Alt+F6": {
      "type": "prompt",
      "templateFile": "templates/research.txt",
      "displayName": "調査",
      "description": "調査タスクのプロンプトの生成"
    },
    "Ctrl+Alt+F11": {
      "type": "prompt",
      "templateFile": "templates/code_explanation.txt",
      "displayName": "コード説明依頼プロンプト作成",
      "description": "コードの動作を説明するプロンプトの生成"
    },
    "Ctrl+Alt+F12": {
      "type": "prompt",
      "templateFile": "templates/debug.txt",
      "displayName": "デバッグ依頼プロンプト作成",
      "description": "コードのデバッグを手伝うプロンプトの生成"
    },
    "Ctrl+Alt+1": {
      "type": "prompt",
      "templateFile": "templates/code_request_python.txt",
      "displayName": "Pythonソース製作依頼",
      "description": "Pythonコードを作成するプロンプトの生成"
    },
    "Ctrl+Alt+2": {
      "type": "prompt",
      "templateFile": "templates/code_request_c.txt",
      "displayName": "C言語ソース製作依頼",
      "description": "C言語コードを作成するプロンプトの生成"
    },
    "Ctrl+Alt+3": {
      "type": "prompt",
      "templateFile": "templates/code_request_cpp.txt",
      "displayName": "C++ソース製作依頼",
      "description": "C++コードを作成するプロンプトの生成"
    },
    "Ctrl+Alt+4": {
      "type": "prompt",
      "templateFile": "templates/code_request_bash.txt",
      "displayName": "bashソース製作依頼",
      "description": "bashスクリプトを作成するプロンプトの生成"
    },
    "Ctrl+Alt+5": {
      "type": "prompt",
      "templateFile": "templates/code_request_batch.txt",
      "displayName": "バッチソース製作依頼",
      "description": "Windowsバッチスクリプトを作成するプロンプトの生成"
    },
    "Ctrl+Alt+6": {
      "type": "prompt",
      "templateFile": "templates/code_request_vba.txt",
      "displayName": "VBAソース製作依頼",
      "description": "VBAコードを作成するプロンプトの生成"
    },
    "Ctrl+Alt+G": {
      "type": "open",
      "value": "https://www.google.com",
      "displayName": "Google HP",
      "description": "Googleホームページを開きます"
    },
    "Ctrl+Alt+P": {
      "type": "prompt",
      "templateFile": "templates/prompt_generation.txt",
      "displayName": "プロンプト作成",
      "description": "生成AI用のプロンプトを作成します"
    }
  }
}
